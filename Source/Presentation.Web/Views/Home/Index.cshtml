@model Application.MainModule.DTO.FiguraIndexDto

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section ScriptContent
{
    <script type="text/javascript" src="@Url.Content("~/Content/js/moment.js")"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.css" rel='stylesheet' type='text/css' />
    <link href="@Url.Content("~/Content/css/custom.css")" rel='stylesheet' type='text/css' />

    <script type="text/javascript">
        $(document).ready(function () {
            $('#calendar').fullCalendar({
                editable: true,
                events: function (start, end, timezone, callback) {

                    var parametros = {
                        fechaInicio: start.format("DD/MM/YYYY"),
                        fechaFin: end.format("DD/MM/YYYY")
                    };

                    $.ajax({
                        url: '@Url.Action("ObtenerPedidosMes", "Home")',
                        method: "POST",
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        data: JSON.stringify(parametros),
                        success: function (response) {
                            var events = [];
                            $.each(response.Data, function (index, pedido) {
                                events.push({
                                    title: pedido.Nombre,
                                    start: pedido.FechaRelease,
                                    end: pedido.FechaRelease
                                });
                            });
                            callback(events);
                        }
                    });
                }
            });

            $("#btnAgregarFigura").bind("click", function (evt) {
                evt.preventDefault();
                $("#divAgregarPedido").modal('show');
            });

            $("#btnGrabar").bind("click", function(evt) {
                var figuraDto = {
                    Nombre: $("#txtNombre").val(),
                    Tienda: $("#txtTienda").val(),
                    Escultor: $("#txtEscultor").val(),
                    FechaPedido: $("#txtFechaPedido").val(),
                    FechaRelease: $("#txtFechaRelease").val(),
                    FechaLlegada: $("#txtFechaLlegada").val(),
                    Precio: $("#txtPrecio").val()
                };

                $.ajax({
                    method: "POST",
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    url: "@Url.Action("Crear", "Home")",
                    data: JSON.stringify(figuraDto)
                }).done(function(response) {
                    if (response.Success) {
                        LimpiarFormulario();
                        $("#divAgregarPedido").modal('close');
                    }
                });
            });
        });

        function LimpiarFormulario() {
            $("#txtNombre").val("");
            $("#ddlTienda").val("");
            $("#ddlEscultor").val("");
            $("#txtFechaPedido").val("");
            $("#txtFechaRelease").val("");
            $("#txtPrecio").val("");
        }
    </script>
}

<div id="divAgregarPedido" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Agregar Pedido</h4>
            </div>
            <div class="modal-body">
                <form id="loginForm" method="post" class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.Nombre, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.Nombre, new { @class = "form-control", @id = "txtNombre" })
                            @Html.ValidationMessageFor(p => p.Figura.Nombre)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.TiendaId, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.TiendaId, new SelectList(Model.Tiendas, "Key", "Value"), new {@class = "form-control input-sm select-select2", @id = "ddlTienda"})
                            @Html.ValidationMessageFor(p => p.Figura.TiendaId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.EscultorId, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.EscultorId, new SelectList(Model.Escultores, "Key", "Value"), new { @class = "form-control input-sm select-select2", @id = "ddlEscultor" })
                            @Html.ValidationMessageFor(p => p.Figura.EscultorId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaPedido, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaPedido, new {@class = "form-control", @id = "txtFechaPedido", @type = "date"})
                            @Html.ValidationMessageFor(p => p.Figura.FechaPedido)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaRelease, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaRelease, new { @class = "form-control", @id = "txtFechaRelease", @type = "date" })
                            @Html.ValidationMessageFor(p => p.Figura.FechaRelease)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaLlegada, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaLlegada, new { @class = "form-control", @id = "txtFechaLlegada", @type = "date" })
                            @Html.ValidationMessageFor(p => p.Figura.FechaLlegada)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.Precio, new { @class = "col-sm-4 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.Precio, new { @class = "form-control", @id = "txtPrecio" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGrabar">Grabar</button>
            </div>
        </div>
    </div>
</div>

<div id="services" class="services">
    <div class="container">
        <div class="service-head text-center">
            <h2>Mes actual <a href="#" id="btnAgregarFigura">+</a></h2>
            <span></span>
        </div>

        <!--- services-grids --->
        <div class="services-grids text-center">
            <div id='calendar' class="calendar"></div>
            <div class="clearfix"> </div>
        </div>
        <!--- services-grids --->
    </div>
</div>
<div class="clearfix"> </div>