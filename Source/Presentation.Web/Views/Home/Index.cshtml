@using Infrastructure.CrossCutting.Enums
@model Application.MainModule.DTO.FiguraIndexDto

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section ScriptContent
{
    <script type="text/javascript" src="@Url.Content("~/Content/js/moment.js")"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/2.4.0/fullcalendar.min.css" rel='stylesheet' type='text/css'/>
    <link href="@Url.Content("~/Content/css/custom.css")" rel='stylesheet' type='text/css'/>

    <script type="text/javascript">
        $(document).ajaxStop($.unblockUI);

        $(document).ready(function() {
            $('#calendar').fullCalendar({
                editable: true,
                events: function(start, end, timezone, callback) {
                    var parametros = {
                        fechaInicio: start.format("DD/MM/YYYY"),
                        fechaFin: end.format("DD/MM/YYYY")
                    };

                    $.blockUI({
                        css: {
                            border: 'none'
                        },
                        message: $("#ajaxloader")
                    });

                    $.ajax({
                        url: '@Url.Action("ObtenerPedidosMes", "Home")',
                        method: "POST",
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        data: JSON.stringify(parametros),
                        success: function(response) {
                            var events = [];
                            $.each(response.Data, function(index, pedido) {
                                var evento = {
                                    title: pedido.Nombre,
                                    start: moment(pedido.FechaPedido, "YYYY-MM-DD"),
                                    end: moment(pedido.FechaPedido, "YYYY-MM-DD"),
                                    data: pedido
                                };

                                if (pedido.EstadoPedidoId == '@((int) TipoPedido.PreOrden)') {
                                    evento.start = moment(pedido.FechaRelease, "YYYY-MM-DD");
                                    evento.end = moment(pedido.FechaRelease, "YYYY-MM-DD");
                                    evento.color = "#FF9933";
                                }

                                events.push(evento);
                            });
                            callback(events);
                        }
                    });
                },
                eventClick: function(calEvent, jsEvent, view) {
                    var pedido = calEvent.data;

                    $("#txtId").val(pedido.Id);
                    $("#txtNombre").val(pedido.Nombre);
                    $("#ddlTienda").val(pedido.TiendaId);
                    $("#ddlEscultor").val(pedido.EscultorId);
                    $("#ddlEstadoFigura").val(pedido.EstadoFiguraId);
                    $("#ddlEstadoPedido").val(pedido.EstadoPedidoId);
                    $("#txtFechaPedido").val(pedido.FechaPedido);
                    $("#txtFechaRelease").val(pedido.FechaRelease);
                    $("#txtFechaLlegada").val(pedido.FechaLlegada);
                    $("#txtPrecio").val(pedido.Precio);
                    $("#txtShipping").val(pedido.Shipping);

                    $("#divAgregarPedido").modal('show');
                }
            });

            $("#btnAgregarFigura").bind("click", function(evt) {
                evt.preventDefault();
                LimpiarFormulario();

                $("#divAgregarPedido").modal('show');
            });

            $("#btnGrabar").bind("click", function(evt) {
                //if (!$("#pedidoForm").valid()) {
                //    evt.preventDefault();
                //    return;
                //}

                var figuraDto = {
                    Id: $("#txtId").val(),
                    Nombre: $("#txtNombre").val(),
                    TiendaId: $("#ddlTienda").val(),
                    EscultorId: $("#ddlEscultor").val(),
                    EstadoFiguraId: $("#ddlEstadoFigura").val(),
                    EstadoPedidoId: $("#ddlEstadoPedido").val(),
                    FechaPedido: $("#txtFechaPedido").val(),
                    FechaRelease: $("#txtFechaRelease").val(),
                    FechaLlegada: $("#txtFechaLlegada").val(),
                    Precio: $("#txtPrecio").val(),
                    Shipping: $("#txtShipping").val()
                };

                $.ajax({
                    method: "POST",
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    url: "@Url.Action("Registrar", "Home")",
                    data: JSON.stringify(figuraDto)
                }).done(function(response) {
                    if (response.Success) {
                        LimpiarFormulario();

                        $('#calendar').fullCalendar('refetchEvents');
                        $("#divAgregarPedido").modal('hide');
                    }
                });
            });
        });

        function LimpiarFormulario() {
            $("#txtNombre").val("");
            $("#ddlTienda").val("");
            $("#ddlEscultor").val("");
            $("#ddlEstadoFigura").val("");
            $("#ddlEstadoPedido").val("");
            $("#txtFechaPedido").val("");
            $("#txtFechaRelease").val("");
            $("#txtFechaLlegada").val("");
            $("#txtPrecio").val("");
            $("#txtShipping").val("");
            $("#txtId").val("");
        }
    </script>
}

<div id="divAgregarPedido" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Agregar Pedido</h4>
            </div>
            <div class="modal-body">
                <form id="pedidoForm" method="post" class="form-horizontal">
                    @Html.HiddenFor(p => p.Figura.Id, new { @class = "form-control", @id = "txtId" })
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.Nombre, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.Nombre, new {@class = "form-control", @id = "txtNombre"})
                            @Html.ValidationMessageFor(p => p.Figura.Nombre)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.TiendaId, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.TiendaId, new SelectList(Model.Tiendas, "Key", "Value"), new {@class = "form-control input-sm select-select2", @id = "ddlTienda"})
                            @Html.ValidationMessageFor(p => p.Figura.TiendaId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.EscultorId, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.EscultorId, new SelectList(Model.Escultores, "Key", "Value"), new {@class = "form-control input-sm select-select2", @id = "ddlEscultor"})
                            @Html.ValidationMessageFor(p => p.Figura.EscultorId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.EstadoFiguraId, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.EstadoFiguraId, new SelectList(Model.EstadosFigura, "Key", "Value"), new {@class = "form-control input-sm select-select2", @id = "ddlEstadoFigura"})
                            @Html.ValidationMessageFor(p => p.Figura.EstadoFiguraId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.EstadoPedidoId, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.DropDownListFor(p => p.Figura.EstadoPedidoId, new SelectList(Model.EstadosPedido, "Key", "Value"), new {@class = "form-control input-sm select-select2", @id = "ddlEstadoPedido"})
                            @Html.ValidationMessageFor(p => p.Figura.EstadoPedidoId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaPedido, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaPedido, new {@class = "form-control", @id = "txtFechaPedido", @type = "date"})
                            @Html.ValidationMessageFor(p => p.Figura.FechaPedido)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaRelease, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaRelease, new {@class = "form-control", @id = "txtFechaRelease", @type = "date"})
                            @Html.ValidationMessageFor(p => p.Figura.FechaRelease)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.FechaLlegada, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.FechaLlegada, new {@class = "form-control", @id = "txtFechaLlegada", @type = "date"})
                            @Html.ValidationMessageFor(p => p.Figura.FechaLlegada)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.Precio, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.Precio, new {@class = "form-control", @id = "txtPrecio"})
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(p => p.Figura.Shipping, new {@class = "col-sm-4 control-label"})
                        <div class="col-sm-6">
                            @Html.TextBoxFor(p => p.Figura.Shipping, new {@class = "form-control", @id = "txtShipping"})
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnGrabar">Grabar</button>
            </div>
        </div>
    </div>
</div>

<div id="services" class="services">
    <div class="container">
        <div class="service-head text-center">
            <h2>Mes actual <a href="#" id="btnAgregarFigura">+</a></h2>
            <span></span>
        </div>

        <!--- services-grids --->
        <div class="services-grids text-center">
            <div id='calendar' class="calendar"></div>
            <div class="clearfix"> </div>
        </div>
        <!--- services-grids --->
    </div>
</div>
