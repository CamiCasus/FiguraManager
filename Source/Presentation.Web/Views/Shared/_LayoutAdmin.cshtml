<html class="no-js">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />

    <title>@WebResources.NombreSistema</title>

    <meta name="description" content="" />
    <meta name="author" content="" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="googlebot" content="noindex" />

    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <!-- Icons -->
    <!-- The following icons can be replaced with your own, they are used by desktop and mobile browsers -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/img/icons/favicon.ico")" />
    <link rel="apple-touch-icon" href="@Url.Content("~/Content/img/apple-touch-icon.png")" />
    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/Content/img/icons/apple-touch-icon-57x57-precomposed.png")" />
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/Content/img/icons/apple-touch-icon-72x72-precomposed.png")" />
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/Content/img/icons/apple-touch-icon-114x114-precomposed.png")" />
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/img/icons/apple-touch-icon-precomposed.png")" />
    <!-- END Icons -->
    <!-- Stylesheets -->
    <!-- The roboto font is included from Google Web Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,400italic,700,700italic" />

    <!-- Bootstrap 2.3.2 is included in its original form, unaltered -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/animate.css")" type="text/css" />

    <!-- Related styles of various javascript plugins -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/plugins.css")" type="text/css" />

    <!-- The main stylesheet of this template. All Bootstrap overwrites are defined in here -->
    <link rel="stylesheet" href="@Url.Stylesheet("~/Content/css/style.css")" type="text/css" />
    <!-- END Stylesheets -->
    <!-- Modernizr (Browser feature detection library) & Respond.js (Enable responsive CSS code on browsers that don't support them) -->
    <script src="@Url.Content("~/Content/js/modernizr-2.6.2-respond-1.1.0.min.js")" type="text/javascript"></script>

    @RenderSection("styles", required: false)

    <link href="@Url.Content("~/Content/ej/web/default-theme/ej.widgets.all.min.css")" rel="stylesheet" />
</head>
<!-- Body -->
<!-- Add the class .fixed to <body> for a fixed layout on large resolutions (min: 1200px) -->
<!-- <body class="fixed"> -->
<body>
    <!-- Page Container -->
    <div id="page-container">
        <!-- Header -->
        <!-- Add the class .navbar-fixed-top or .navbar-fixed-bottom for a fixed header on top or bottom respectively -->
        <!-- <header class="navbar navbar-inverse navbar-fixed-top"> -->
        <!-- <header class="navbar navbar-inverse navbar-fixed-bottom"> -->
        <header class="navbar navbar-inverse">
            <!-- Navbar Inner -->
            <div class="navbar-inner remove-radius remove-box-shadow">
                <!-- Mobile Navigation, Shows up  on smaller screens -->
                <ul class="navbar-nav-custom pull-right hidden-md hidden-lg">
                    <li class="divider-vertical"></li>
                    <li>
                        <a href="javascript:void(0)" data-toggle="collapse" data-target=".navbar-main-collapse">
                            <i class="fa fa-bars"></i>
                        </a>
                    </li>
                </ul>
                <!-- END Mobile Navigation -->
                <!-- Logo -->
                <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                    <img src="@Url.Content("~/Content/img/logoh.png")" alt="logo" />
                </a>

                <!-- Header Widgets -->
                <!-- You can create the widgets you want by replicating the following. Each one exists in a <li> element -->
                <ul id="widgets" class="navbar-nav-custom pull-right">
                    <!-- Add .dropdown-center-responsive class to align the dropdown menu center (so its visible on mobile) -->
                    <!-- User Menu -->
                    <li class="dropdown pull-right dropdown-user">
                        <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i>
                            @if (WebSession.Usuario != null)
                            {
                                @Html.Raw(string.Format("<strong>{0}</strong> ({1}) <br />", WebSession.Usuario.UserName.ToUpper(), WebSession.Usuario.RolNombre))
                                <b class="caret"></b>
                            }
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <!-- Modal div is at the bottom of the page before including javascript code -->
                                <a href="#modal-user-settings" role="button" data-toggle="modal"><i class="fa fa-user"></i>@WebResources.CambiarClave</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("Logout", "Account", new { area ="" })"><i class="fa fa-lock"></i>@WebResources.CerrarSesion</a>
                            </li>
                        </ul>
                    </li>
                    <!-- END User Menu -->
                </ul>

                <!-- END Header Widgets -->
            </div>
            <!-- END Navbar Inner -->
        </header>
        <!-- END Header -->
        <!-- Inner Container -->
        <div id="inner-container">
            <!-- Sidebar -->
            <aside id="page-sidebar" class="collapse navbar-collapse navbar-main-collapse">
                <!-- Primary Navigation -->
                @Html.Partial("MenuAdmin")
                <!-- END Primary Navigation -->
            </aside>
            <!-- END Sidebar -->
            <!-- Page Content -->
            <div id="page-content">
                <ul id="nav-info" class="clearfix" style="margin:0;">
                    <li><a href="@Url.Action("Index", "Home", new { area = "" })"><i class="fa fa-home"></i></a></li>
                    <li><a id="ModuloMenu" href="javascript:void(0)"></a></li>
                    <li class="active"><a id="OperacionMenu" href=""></a></li>
                </ul>
                <div id="body-container" style=" min-height: 546px; overflow: auto; ">
                    <div style="padding: 20px; ">
                        <!--scroll sc-->
                        @RenderBody()
                    </div>
                </div>
                <!-- END Page Content -->
                <!-- Footer -->
                <!-- <footer>
                     <h6>@WebResources.DerechoAutor</h6>
                 </footer>-->
                <!-- END Footer -->
            </div>
            <!-- END Inner Container -->
        </div>
        <!-- END Page Container -->
        <!-- Scroll to top link, check main.js - scrollToTop() -->
        <a href="#" id="to-top"><i class="icon-chevron-up"></i></a>

        @Html.Partial("~/Views/Account/ChangePassword.cshtml", new ChangePasswordDto())

        <!-- Jquery library -->
        <script src="@Url.Content("~/Content/js/jquery-1.10.2.min.js")"></script>
        <script src="@Url.Content("~/Content/js/jsrender.min.js")"></script>
        <script src="@Url.Content("~/Content/js/jquery.easing.1.3.min.js")"></script>
        <script src="@Url.Content("~/Content/js/jquery.globalize.min.js")"></script>
        <script src="@Url.Content("~/Content/js/ej.web.all.min.js")"></script>
        <script src="@Url.Content("~/Content/js/ej.unobtrusive.min.js")"></script>

        @RenderSection("scriptsInitial", required: false)

        <!-- Jquery plugins and custom javascript code -->
        <script src="@Url.Content("~/Content/js/bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/plugins.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/pace.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Content/js/jquery.validate.unobtrusive.bootstrap.min.js")" type="text/javascript"></script>
        <script src="@Url.Script("~/Content/js/webApp.js")" type="text/javascript"></script>
        <script src="@Url.Script("~/Content/ViewsJs/AccountChangePassword.js")" type="text/javascript"></script>
        <script type="text/javascript">
            $(function () {
                var parametros = {
                    mensajeEspera: '@Html.Raw(WebResources.MensajeDeEspera)',
                    tituloPopupMensaje: '@Html.Raw(WebResources.Informacion)',
                    tituloPopupComfirmacion: '@Html.Raw(WebResources.Confirmacion)',
                    mensajePopupConfirmacion: '@Html.Raw(WebResources.MensajeDeConfirmacion)',
                    btnCancelar: '@WebResources.Cancelar',
                    btnAceptar: '@WebResources.Aceptar',
                    codigoIdioma: '@WebSession.Idioma.CodigoNeutral',
                    formatoFecha: '@Constantes.FormatoFechaPorDefecto.ToLower()',
                    unAuthorizedState: "@Constantes.Unauthorized",
                    toolbar: {
                        nuevoText: "@WebResources.BtnNuevo",
                        editarText: "@WebResources.BtnEditar",
                        eliminarText: "@WebResources.BtnEliminar",
                        imprimirText: "@WebResources.BtnImprimir",
                    }
                };

                webApp.init(parametros);

                setTimeout(function hh() {
                    var hcontainer = $(window).height() - $("header").outerHeight();
                    $("#inner-container").css('max-height', hcontainer + "px");
                    $("#page-sidebar").css('min-height', hcontainer + "px");
                    $("#page-content").css('max-height', hcontainer + "px");

                    var hb = hcontainer - $("#nav-info").outerHeight() - $("footer").outerHeight();;
                    $("#body-container").css('height', hb - 2 + "px");
                    $("#body-container").css('overflow', "auto");

                    var hmenu = hcontainer - $(".titulo-menu").outerHeight();
                    $("nav#primary-nav").css('height', hmenu + "px");
                    $("nav#primary-nav").css('overflow', "auto");

                    setTimeout(hh, 100);
                }, 100);

            });
        </script>
        <script src="@Url.Content(string.Format("~/Content/js/languages/select2/select2_locale_{0}.js", WebSession.Idioma.CodigoNeutral))" type="text/javascript"></script>
        <script src="@Url.Content(string.Format("~/Content/js/languages/datepicker/bootstrap-datepicker.{0}.js", WebSession.Idioma.CodigoNeutral))" type="text/javascript"></script>

        @Html.EJ().ScriptManager()

        <!-- Javascript code only for this page -->
        @RenderSection("scripts", required: false)
    </div>
</body>
<!-- END Body -->
</html>
